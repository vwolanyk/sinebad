<p id="notice"><%= notice %></p>

<div class="jumbotron text-center">
<h1>Sinema-D</h1>
</div>

<div class="container">

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Note</th>
      <th>Genre</th>
      <th>Informant</th>
      <th>Last watched</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @films.each do |film| %>
      <tr>
        <td><%= film.title %></td>
        <td><%= film.note %></td>
        <td><%= film.genre.name %></td>
        <td><%= film.informant.name %></td>
        <td><%= film.last_watched %></td>
        <td><%= link_to 'Show', film %></td>
        <td><%= link_to 'Edit', edit_film_path(film) %></td>
        <td><%= link_to 'Destroy', film, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

